<div class="w-full grid grid-cols-1 md:grid-cols-2 gap-6">
  <div class="rounded-lg p-6 bg-white">
    <div class="flex items-center justify-between space-x-2 mb-4">
      <div class="flex items-center space-x-2">
        <%= link_to profile_path(challenge_post.user) do %>
          <%= image_tag challenge_post.user.profile.avatar.url, class: 'h-10 w-10 object-cover object-center rounded-full' %>
        <% end %>
        <p class="text-lg text-gray-700 font-normal mb-1"><%= challenge_post.user.username %></p>
      </div>
      <% if challenge_post.user_id == current_user.id %>
        <%= render 'crud', { challenge_post: challenge_post } %>
      <% end %>
    </div>
    <div class="flex flex-col items-center">
      <div class="text-2xl"><%= challenge_post.title %></div>
      <div class="flex justify-center flex-wrap my-2">
        <%= render 'posts/category', { post: challenge_post, categories: challenge_post.categories } %>
      </div>
      <p class="text-gray-400 leading-loose font-normal text-base text-xl"><%= challenge_post.content %></p>
    </div>
  </div>
</div>