<div class="p-2 sm:p-6 bg-purple-950">
  <div class="flex flex justify-center items-center py-3 mb-3">
    <div class="relative flex items-center space-x-4">
      <div class="relative">
        <%= image_tag 'AI.png', class: 'w-20 h-20 rounded-full border-4 border-white' %>
      </div>
      <div class="flex flex-col leading-tight">
        <div class="text-2xl mt-1 flex items-center">
          <span class="text-white mr-3">CHALLENGEロボ</span>
        </div>
        <span class="text-lg text-gray-600">Junior Developer</span>
      </div>
    </div>
  </div>
  <div class="flex flex-col px-20 w-full">
    <div data-controller="scroll infinite-scroll" data-action="scroll->infinite-scroll#scroll" class="flex flex-col rounded-2xl bg-gray-200 p-4 overflow-y-auto" style="max-height: 80vh; min-height: 80vh;">
      
    </div>
    <div class="bg-yellow-700 mt-7 mb-7 rounded-lg py-3">
        <div class="items-center rounded-xl px-4">
          <%= form_with url: chat_ais_path,  data: { controller: "reset-form message-preview submit-button", action: "submit->message-preview#clearPreview input->submit-button#toggle keyup->submit-button#toggle turbo:submit-end->submit-button#submitEnd" } do |f| %>
            <div class="flex items-center p-2">
              <%= f.text_area :body, class: 'border rounded-xl focus:outline-none focus:border-yellow-400 pl-4 h-10 p-2 w-full', data: { message_preview_target: "textArea", submit_button_target: "textArea" } %>
              <button class="flex items-center justify-center bg-lime-400 rounded-xl text-black px-4 py-2 flex-shrink-0 ml-3" data-submit-button-target="submit">
                <span class="ml-2">
                  <svg class="w-5 h-5 transform rotate-45 -mt-px" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                  </svg>
                </span>
              </button>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
