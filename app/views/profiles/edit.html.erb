<div class="h-full bg-gray-200 p-8">
  <%= form_with model: @user, url: profile_path, local: true do |f| %>
    <div class="bg-white rounded-lg shadow-xl pb-8">
      <div class="w-full h-[250px]">
        <img src="https://vojislavd.com/ta-template-demo/assets/img/profile-background.jpg" class="w-full h-full rounded-tl-lg rounded-tr-lg">
      </div>
      <div class="flex flex-col items-center -mt-20">
        <div class='mt-3 mb-3' data-controller="image-preview">
          <%= image_tag @user.avatar.url, class: 'rounded-full w-40 h-40 border-4 border-white ml-20', data: { image_preview_target: "preview" } %>

          <%= f.file_field :avatar,
                        data: { action: "change->image-preview#previewImage", image_preview_target: "input" },
                        class: 'w-50 border-2 border-slate-400 rounded-full mt-1',
                        accept: 'image/*' %>
          <%= f.hidden_field :avatar_cache %>
        </div>

        <div class="flex items-center">
          <%= f.label :one_word %>
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
            </svg>
            <%= f.text_field :one_word, class: 'text-gray-700' %>
          </div>
        </div>

      </div>
    </div>

    <div class="my-4 flex flex-col 2xl:flex-row space-y-4 2xl:space-y-0 2xl:space-x-4">
      <div class="w-full flex flex-col 2xl:w-1/3">
        <div class="flex-1 bg-white rounded-lg shadow-xl p-8">
          <h4 class="text-xl text-gray-900 font-bold">プロフィール</h4>
          <ul class="mt-2 text-gray-700">
            <li class="flex border-y py-2">
              <span class="font-bold w-36">ユーザーネーム:</span>
              <%= f.text_field :username, class: 'text-gray-700' %>
            </li>
            <li class="flex border-b py-2">
              <span class="font-bold w-36">誕生日:</span>
              <%= f.date_field :birthday, class: 'text-gray-700' %>
            </li>
            <% if current_user %>
              <li class="flex border-b py-2">
                <span class="font-bold w-36">Email:</span>
                <%= f.email_field :email, class: 'text-gray-700' %>
              </li>
            <% end %>
            <li class="flex border-b py-2">
              <span class="font-bold w-36">趣味:</span>
              <%= f.text_field :hobbies, class: 'text-gray-700',size: '130x10' %>
            </li>
            <li class="flex border-b py-2">
              <span class="font-bold w-36">挑戦したいこと:</span>
              <%= f.text_field :challenge, class: 'text-gray-700',size: '130x10' %>
            </li>
          </ul>
        </div>
      </div>

      <div class="flex flex-col w-full 2xl:w-2/3">
        <div class="flex-1 bg-white rounded-lg shadow-xl p-8">
          <h4 class="text-xl text-gray-900 font-bold">自己紹介</h4>
          <%= f.text_area :introduction, class: 'mt-2 text-gray-700',size: '150x8' %>
        </div>
      </div>
    </div>

    <div class="text-right mt-4">
      <%= f.submit "更新", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
