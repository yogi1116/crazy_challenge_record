<div class="bg-transparent" data-controller="flash">
  <% flash.each do |message_type, message| %>
    <div role="alert" class="flash-message <%= flash_background_color(message_type) %> text-white font-bold rounded-t px-4 py-2 flex justify-between items-center">
      <%= message_type.to_s.humanize %>
      <button type="button" data-action="click->flash#dismiss">âœ•</button>
    </div>
    <div class="border border-t-0 <%= flash_border_color(message_type) %> rounded-b <%= flash_background_thin_color(message_type) %> px-4 py-3 <%= flash_text_color(message_type) %>">
      <p><%= message %></p>
    </div>
  <% end %>
</div>