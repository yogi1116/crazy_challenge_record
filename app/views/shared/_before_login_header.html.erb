          <%= image_tag 'top.jpg', alt: 'Bootstrap', width: 130, height: 60 %>
        <% end %>
        <%= link_to '#', class: "d-flex align-items-center my-2 my-lg-0 me-lg-auto text-white text-decoration-none" do %>
          <%= image_tag 'top.jpg', alt: 'Bootstrap', width: 70, height: 60 %>
        <% end %>
          
        <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
          <li>
            <a href="#" class="nav-link text-white">
              <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="/icons/bootstrap-icons.svg#table"></use></svg>
              Orders
            </a>
          </li>
          <li>
            <a href="#" class="nav-link text-white">
              <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="/icons/bootstrap-icons.svg#people-circle2"></use></svg>
              Products
            </a>
          </li>
          <li>
