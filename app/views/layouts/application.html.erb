<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag('title.png') %>
    <title>CRAZYMAN</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>
    <%= javascript_importmap_tags %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="flex flex-col min-h-screen" data-user-id="<%= current_user&.id %>">
    <% if logged_in? %>
      <%= render 'shared/header' %>
    <% else %>
      <%= render 'shared/before_login_header' %>
    <% end %>
    <div class="flex-grow">
      <%= render 'shared/flash_messages' %>
      <%= render 'shared/chat_ai_button' if logged_in? && !(['messages', 'chat_ais'].include?(controller_name) && ['show', 'new'].include?(action_name)) %>
      <%= yield %>
      <%= yield(:js) %>
    </div>
    <%= render 'shared/footer' %>
  </body>
</html>
