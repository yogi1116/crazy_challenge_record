<div class="flex flex-col h-full overflow-x-auto">
  <div class="flex flex-col h-full">
    <div class="grid grid-cols-12 gap-y-2">
      <% if message.user_id == current_user.id %>
        <div class="col-start-7 col-end-13 rounded-lg">
          <div class="flex flex-row justify-end items-end">
            <div class="text-xs mr-2 text-gray-500">
              <%= message.created_at.strftime('%H:%M') %>
            </div>
            <div class="relative mr-3 text-sm bg-indigo-500 py-2 px-4 shadow rounded-xl text-white">
              <%= message.body %>
            </div>
          </div>
        </div>
      <% else %>
      <% current_time = message.created_at.strftime('%H:%M') %>
        <div class="col-start-1 col-end-8 rounded-lg">
          <div class="flex flex-row items-center">
            <% if previous_time != current_time %>
              <%= image_tag @receiver.profile.avatar.url, class: 'flex items-center justify-center h-10 w-10 rounded-full flex-shrink-0' %>
            <% else %>
              <div class="h-10 w-10 flex-shrink-0"></div>
            <% end %>
            <div class="relative ml-3 text-sm bg-white py-2 px-4 shadow rounded-xl">
              <%= message.body %>
            </div>
            <div class="text-xs ml-2 text-gray-500 mt-auto">
              <%= current_time %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>