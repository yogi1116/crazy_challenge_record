<!-- comment form -->
<%= turbo_frame_tag dom_id(comment) do %>
  <%= form_with model: [post, comment], id: "#{dom_id(comment)}_form" do |f| %>
    <div class="flex mx-auto items-center justify-center ">
      <div class="bg-white text-white rounded-lg w-full mx-5 md:w-[50rem] mb-5 lg:w-[60rem] space-y-6 p-5">
        <div class="flex flex-wrap -mx-3 mb-6">
          <h2 class="px-4 pt-3 text-violet-700 font-bold text-lg">COMMENT</h2>
          <div class="w-full md:w-full px-3 pt-1 mb-2">
            <%= f.text_area :body, class: 'bg-gray-100 rounded border border-gray-400 leading-normal resize-none w-full h-20 px-3 font-medium text-black placeholder-gray-700 focus:outline-none focus:bg-white' %>
          </div>
          <div class="ml-3 flex items-center">
            <% unless comment.persisted? %>
              <%= f.submit t('posts.comment.create'), class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-1 px-4 rounded-lg tracking-wide mr-1" %>
            <% else %>
              <%= f.submit t('posts.comment.update'), class: "bg-green-600 hover:bg-green-700 text-white font-medium py-1 px-4 rounded-lg tracking-wide mr-1" %>
              <%= link_to post_path(post), class: "bg-gray-400 text-white font-medium py-1 px-4 rounded-lg tracking-wide ml-1",  data: { turbo_frame: dom_id(comment) } do %>
                <span><%= t('posts.comment.cancel') %></span>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>