<!-- comment form -->
<div class="flex mx-auto items-center justify-center ">
  <div class="bg-white text-white rounded-lg w-full mx-5 md:w-[50rem] mb-5 lg:w-[60rem] space-y-6 p-5">
    <%= form_with model: [post, comment], local: true do |f| %>
      <div class="flex flex-wrap -mx-3 mb-6">
        <h2 class="px-4 pt-3 text-gray-800 text-lg">comment</h2>
        <div class="w-full md:w-full px-3 pt-1 mb-2">
          <%= f.text_area :body, class: 'bg-gray-100 rounded border border-gray-400 leading-normal resize-none w-full h-20 px-3 font-medium placeholder-gray-700 focus:outline-none focus:bg-white' %>
        </div>
        <div class="ml-3">
          <%= f.submit class: "bg-white text-gray-700 font-medium py-1 px-4 border border-gray-400 rounded-lg tracking-wide mr-1 hover:bg-gray-100" %>
        </div>
      </div>
    <% end %>
  </div>
</div>