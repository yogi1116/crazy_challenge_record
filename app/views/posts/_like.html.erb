<% if post.challenge_result == 'complete' %>
  <%= link_to post_likes_path(post_id: post.id), data: { "turbo-method": :post }, class: 'crazy' do %>
    <%= image_tag 'likes/crazy_2', class: 'h-20 w-20' %>
  <% end %>
<% else %>
  <% if post.retry == 'try' %>
    <%= link_to post_likes_path(post_id: post.id), data: { "turbo-method": :post }, class: 'stop' do %>
      <%= image_tag 'likes/fight_2', class: 'h-20 w-20' %>
    <% end %>
  <% elsif post.retry == 'no_try' %>
    <%= link_to post_likes_path(post_id: post.id), data: { "turbo-method": :post }, class: 'nice_fight' do %>
      <%= image_tag 'likes/nice_fight_2', class: 'h-20 w-20' %>
    <% end %>
  <% end %>
<% end %>
