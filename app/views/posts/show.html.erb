<div style="background-image:url('<%= image_path('post.jpeg') %>')">
  <div class="flex justify-center items-center">
    <div class="bg-white text-white rounded-lg w-full mx-5 md:w-[40rem] m-10 lg:w-[70rem] space-y-6 p-10">
      <div class="flex items-center justify-between w-full">
        <div class="w-1/3 flex justify-start">
          <div class="w-16 h-16 border-4 border-white">
            <%= link_to user_profile_path(@post.user) do %>
              <%= image_tag @post.user.profile.avatar.url, class: 'rounded-full w-full h-full object-cover' %>
            <% end %>
          </div>
          <div class="space-y-2">
            <div class="flex space-x-2 items-center mt-5 ml-1">
              <h2 class="text-base text-black"><%= @post.user.username %></h2>
              <% if @post.user == current_user %>
                <svg class="h-4 w-4 text-blue-500" fill="none" viewBox="0 0 24 24"stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              <% end %>
            </div>
          </div>
        </div>

        <div class="w-1/3 flex justify-center">
          <%= render 'challenge_result', { post: @post } %>
        </div>

        <div class="w-1/3 flex justify-end">
          <% if current_user.own?(@post) %>
            <%= render 'crud', { post: @post } %>
          <% else %>
            <div class="flex items-center">
              <%= render 'like_button', { post: @post } %>
              <div class="ml-3">
                <%= render 'likes_count', { post: @post } %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="" style="margin-top: 0;">
      <%= render 'category', { post: @post, categories: @post.categories } %>
      </div>

      <div class="flex space-x-8 mt-8">
        <div class="flex-shrink-0">
          <%= image_tag 'posts/title.png', class: 'h-20 w-20 text-blue-600' %>
        </div>
        <div class="flex-grow">
          <h4 class="text-xl font-bold text-gray-700"><%= Post.human_attribute_name(:title) %></h4>
          <p class="text-gray-600 my-2"><%= @post.title %></p>
        </div>
      </div>
      <div class="flex space-x-8 mt-8">
        <div class="flex-shrink-0">
          <%= image_tag 'posts/content.png', class: 'h-20 w-20 text-blue-600' %>
        </div>
        <div class="flex-grow">
          <h4 class="text-xl font-bold text-gray-700"><%= Post.human_attribute_name(:content) %></h4>
          <p class="text-gray-600 my-2"><%= @post.content %></p>
        </div>
      </div>
      <% if @post.challenge_result == 'complete' %>
        <div class="flex space-x-8 mt-8">
          <div class="flex-shrink-0">
            <%= image_tag 'posts/record.png', class: 'h-20 w-20 text-blue-600' %>
          </div>
          <div class="flex-grow">
            <h4 class="text-xl font-bold text-gray-700"><%= Post.human_attribute_name(:record) %></h4>
            <p class="text-gray-600 my-2"><%= @post.record %></p>
          </div>
        </div>
      <% else %>
        <div class="flex space-x-8 mt-8">
          <div class="flex-shrink-0">
            <%= image_tag 'posts/retry.png', class: 'h-20 w-20 text-blue-600' %>
          </div>
          <div class="flex-grow">
            <h4 class="text-xl font-bold text-gray-700"><%= Post.human_attribute_name(:retry) %></h4>
            <p class="text-gray-600 my-2"><%= @post.retry_i18n %></p>
          </div>
        </div>
      <% end %>
      <div class="flex space-x-8 mt-8">
        <div class="flex-shrink-0">
          <%= image_tag 'posts/event.png', class: 'h-20 w-20 text-blue-600' %>
        </div>
        <div class="flex-grow">
          <h4 class="text-xl font-bold text-gray-700"><%= Post.human_attribute_name(:impression_event) %></h4>
          <p class="text-gray-600 my-2"><%= @post.impression_event %></p>
        </div>
      </div>
      <div class="flex space-x-8 mt-8">
        <div class="flex-shrink-0">
          <%= image_tag 'posts/lesson.png', class: 'h-20 w-20 text-blue-600' %>
        </div>
        <div class="flex-grow">
          <h4 class="text-xl font-bold text-gray-700"><%= Post.human_attribute_name(:lesson) %></h4>
          <p class="text-gray-600 my-2"><%= @post.lesson %></p>
        </div>
      </div>

      <div class="grid grid-cols-4 col-span-2 gap-2">
        <% @post.images.each do |image| %>
          <div class="overflow-hidden rounded-xl col-span-1 max-h-[14rem]">
            <%= image_tag image, class: 'h-full w-full object-cover' %>
          </div>
        <% end %>
      </div>
      <div class="flex items-center text-xs text-slate-500">
        <%= @post.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
        <%= render 'comments/count', { post: @post, comment: @comment } %>
      </div>
    </div>
  </div>

  <%= render 'comments/form', { post: @post, comment: @comment } %>

  <div class="pb-10">
    <div id="comments">
      <% @comments.each do |comment| %>
        <%= render 'comments/comment', { comment: comment } %>
      <% end %>
    </div>
  </div>
</div>